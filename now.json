{
  "name": "design system",
  "version": 2,
  "public": false,
  "builds": [
    {
      "src": "packages/playroom/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "dist" }
    },
    { "src": "packages/web/package.json", "use": "@now/next" }
  ],
  "routes": [
    { "src": "/playroom(/.*)?", "dest": "/packages/playroom/index.html" },
    { "src": "/(/.*)?", "dest": "/packages/web/$1" }
  ]
}
